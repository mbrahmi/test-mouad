<figure class="movie">
    <div class="movie__hero">
        <img src="https://image.tmdb.org/t/p/w220_and_h330_face{{ movie.posterPath }}" alt="Rambo" class="movie__img">
    </div>
    <div class="movie__content">
        <div class="movie__title">
            <div>
                <h1 class="heading__primary">{{ movie.title  }}</h1>
                <div>année : {{ movie.releaseDate|date('Y') }}</div>
            </div>
            <div>

                <div class="movie__tag movie__tag--1">{{ movie.voteAverage }}/10</div>
                <div class="movie__tag movie__tag--2">({{ movie.voteCount }} votes)</div>
            </div>
        </div>
        <p class="movie__description">
            {{ movie.overview }}
        </p>
        <div class="movie__details">
            <a href="{{ path('movie_detail', {id: movie.id}) }}">Lire le détail</a>
        </div>
    </div>
</figure>
